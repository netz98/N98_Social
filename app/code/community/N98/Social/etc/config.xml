<config>
    <modules>
        <N98_Social>
            <version>0.9.0</version>
        </N98_Social>
    </modules>
    <frontend>
        <layout>
            <updates>
                <n98social>
                    <file>n98/social.xml</file>
                </n98social>
            </updates>
        </layout>
        <translate>
            <modules>
                <N98_Social>
                    <files>
                        <default>N98_Social.csv</default>
                    </files>
                </N98_Social>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <N98_Social>
                    <files>
                        <default>N98_Social.csv</default>
                    </files>
                </N98_Social>
            </modules>
        </translate>
    </adminhtml>
    <global>
        <blocks>
            <n98social>
                <class>N98_Social_Block</class>
            </n98social>
        </blocks>
        <helpers>
            <n98social>
            	<class>N98_Social_Helper</class>
            </n98social>
        </helpers>
    </global>
    <default>
        <n98social>
            <general>
                <info_link>http://www.heise.de/ct/artikel/2-Klicks-fuer-mehr-Datenschutz-1333879.html</info_link>
            </general>
            <facebook>
                <enabled>1</enabled>
            </facebook>
            <twitter>
                <enabled>1</enabled>
            </twitter>
            <gplus>
                <enabled>1</enabled>
            </gplus>
        </n98social>
    </default>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <n98social>
                                            <title>n98 Social Section</title>
                                        </n98social>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>